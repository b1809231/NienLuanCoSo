@model NLCS3.Models.HOATDONG

@{
    ViewBag.Title = "create_hoatdong";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container-fluid">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/Home/Index">Trang chủ</a></li>
                <li class="breadcrumb-item ">Quản lý</li>
                <li class="breadcrumb-item active">Viên chức</li>
                <li style="text-align: right">
                </li>
            </ul>

        </div>
    </div>
</div>
<center>


    <div class="col-lg-10">
        <div class="block">
            <div class="panel-heading" style="font-weight:bold; color:coral;font-size:20px; text-align:center">
                Nhập thông tin viên chức
            </div>


            @using (Html.BeginForm("create_hoatdong", "HoatDong", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>HOATDONG</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2" style="font-weight:bold">
                            Mã hoạt động:
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HD_MA, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HD_MA, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" style="font-weight:bold">
                            Bộ môn
                        </label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.BM_MA, ViewBag.CateList as SelectList, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" style="font-weight:bold">
                            Tên hoạt động
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HD_TEN, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HD_TEN, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" style="font-weight:bold">
                            Mô tả
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HD_MOTA, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HD_MOTA, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" style="font-weight:bold">
                            Số tiết
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HD_SOTIET, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HD_SOTIET, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" style="font-weight:bold">
                            Ngày diễn ra
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HD_NGAYDIENRA, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.HD_NGAYDIENRA, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" style="font-weight:bold">
                            File
                        </label>
                        <div class="col-md-10">
                            <div class="col-md-10">
                                <input type="file" name="f">
                                @ViewBag.ThongBao
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" style="background-color:burlywood" /> |
                            @Html.ActionLink("Về danh sách", "list_hoatdong")
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</center>