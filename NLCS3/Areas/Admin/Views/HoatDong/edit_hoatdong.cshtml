@model NLCS3.Models.HOATDONG

@{
    ViewBag.Title = "edit_hoatdong";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="block">
        <br />
        <h2 style="text-align:center">CHỈNH SỬA THÔNG TIN</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>HOATDONG</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" style="font-weight:bold">
                    Mã 
                    </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HD_MA, new { htmlAttributes = new { @class = "form-control", @disabled="disabled" } })
                    @Html.ValidationMessageFor(model => model.HD_MA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" style="font-weight:bold">
                    Bộ môn quản lý
                </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.BM_MA, ViewBag.CateList as SelectList, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" style="font-weight:bold">
                   Tên hoạt động
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HD_TEN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HD_TEN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" style="font-weight:bold">
                    Mô tả
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HD_MOTA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HD_MOTA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" style="font-weight:bold">
                  Số tiết
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HD_SOTIET, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HD_SOTIET, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" style="font-weight:bold">
                    Ngày diễn ra
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HD_NGAYDIENRA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HD_NGAYDIENRA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" style="font-weight:bold">
                   File
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HD_FILE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HD_FILE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" style="background-color:antiquewhite;" /> |
                    @Html.ActionLink("Về danh sách", "list_hoatdong")

                </div>
            </div>
            </div>
        }

      </div>
    </div>
