@model NLCS3.Models.VIENCHUC

@{
    ViewBag.Title = "delete_vienchuc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<center>
    <div class="col-lg-12">
        <div class="block" style="background-color:lightgray; color:black">
            <div class="panel-heading" style="font-weight:bold;font-size:20px">
                <img src="~/Content/Image/error.png" style=" width:80px ;height: 80px" />
                Bạn có muốn xóa?
            </div>

            <table class="table">
                <tr>
                    <td style="font-weight:bold">
                        Mã viên chức:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.VC_MA)
                    </td>
                </tr>
                <tr>
                    <td style="font-weight:bold">
                        Ảnh đại diện:
                    </td>
                    <td>
                        <img src="@Url.Content("~/Content/Image/VienChuc/"+Model.VC_ANH)" alt="vc_anh" width="100" height="100" />
                    </td>
                </tr>
                <tr>
                    <td style="font-weight:bold">
                        Họ và tên:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.VC_HOTEN)
                    </td>
                </tr>
                <tr>
                    <td style="font-weight:bold">
                        Ngày sinh:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.VC_NGAYSINH)
                    </td>
                </tr>
                <tr>
                    <td style="font-weight:bold">
                        Giới tính:
                    </td>
                    <td>
                        @((bool)Model.VC_GIOITINH ? "Nam" : "Nữ")
                    </td>
                </tr>
                <tr>
                    <td style="font-weight:bold">
                        Địa chỉ:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.VC_DIACHI)
                    </td>
                </tr>
                <tr>
                    <td style="font-weight:bold">
                        Số điện thoại:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.VC_SDT)
                    </td>
                </tr>
                <tr>
                    <td style="font-weight:bold">
                        Email:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.VC_EMAIL)
                    </td>
                </tr>
                <tr>
                    <td style="font-weight:bold">
                        Lương:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.VC_LUONG)
                    </td>
                </tr>
                <tr>
                    <td style="font-weight:bold">
                        Quyền sử dụng:
                    </td>
                    <td>

                        @Html.DisplayFor(model => model.VC_QUYENSD)
                    </td>
                </tr>

                <tr>
                    <td style="font-weight:bold">
                        Mật khẩu:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.VC_MATKHAU)
                    </td>
                </tr>

                <tr>
                    <td style="font-weight:bold">
                        Bộ môn:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BOMON.BM_TEN)
                    </td>
                </tr>
            </table>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" style="background-color:antiquewhite;" /> |
                    @Html.ActionLink("Về danh sách", "list_vienchuc")
                </div>
            }
        </div>
    </div>
</center>