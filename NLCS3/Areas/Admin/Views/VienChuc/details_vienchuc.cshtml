@model NLCS3.Models.VIENCHUC

@{
    ViewBag.Title = "details_vienchuc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12">
    <div class="block">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="font-weight:bold;font-size:20px">
                        <img src="~/Content/Image/detail.png" style="width:100px ;height:100px"  />
                        Thông Tin Chi Tiết
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div>
                                    <table class="table">
                                        <tr>
                                            <td style="font-weight:bold">
                                                Mã viên chức:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.VC_MA)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">
                                                Ảnh đại diện:
                                            </td>
                                            <td>
                                                <img src="@Url.Content("~/Content/Image/VienChuc/"+Model.VC_ANH)" alt="vc_anh" width="100" height="100" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">
                                                Họ và tên:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.VC_HOTEN)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">
                                                Ngày sinh:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.VC_NGAYSINH)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">
                                                Giới tính:
                                            </td>
                                            <td style="font-weight:bold">
                                                @((bool)Model.VC_GIOITINH ? "Nam" : "Nữ")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">
                                                Địa chỉ:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.VC_DIACHI)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">
                                                Số điện thoại:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.VC_SDT)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">
                                                Email:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.VC_EMAIL)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">
                                                Lương:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.VC_LUONG)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">
                                                Quyền sử dụng:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.VC_QUYENSD)
                                            </td>
                                        </tr>

                                        <tr>
                                            <td style="font-weight:bold">
                                                Mật khẩu:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.VC_MATKHAU)
                                            </td>
                                        </tr>

                                        <tr>
                                            <td style="font-weight:bold">
                                                Bộ môn:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.BOMON.BM_TEN)
                                            </td>
                                        </tr>
                                    </table>
                                    <hr />
                                    
                                    <p class="btn btn-primary" style="background-color: lightgreen">
                                        @Html.ActionLink("Chỉnh sửa", "edit_vienchuc", new { /* id = Model.PrimaryKey */ })
                                    </p>
                                    <p>
                                    @Html.ActionLink("Về danh sách", "list_vienchuc")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
    </div>
