@model NLCS3.Areas.Admin.Models.SendMail
@{
    ViewBag.Title = "SendMail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Home/Index">Trang chủ</a></li>
            <li class="breadcrumb-item active">Mail</li>
        </ul>
    </div>
</div>
@using (Html.BeginForm("SendMail", "SendMail", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-lg-12">
        <div class="block">
            <div class="title"><strong>All form elements</strong></div>
            <div class="block-body">
                <form class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Người gửi</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.MAILGUI, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MAILGUI, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Mật khẩu</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.PASS, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PASS, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Người nhận</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.MAILNHAN, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MAILNHAN, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Chủ đề</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.CHUDE, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CHUDE, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Nội dung</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.NOIDUNG, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NOIDUNG, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="form-group row has-success">
                        <label class="col-sm-3 form-control-label">Tệp đính kèm</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.FILE, new { type = "file" })
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="form-group row">
                        <div class="col-sm-9 ml-auto">
                            <button type="submit" class="btn btn-primary">Send</button>
                        </div>
                    </div>
                </form>
                <span style="color:green">@ViewBag.Message</span>
            </div>
        </div>
    </div>
}
