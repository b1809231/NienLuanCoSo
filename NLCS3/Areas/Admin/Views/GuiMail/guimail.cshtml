
@{
    ViewBag.Title = "guimail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Home/Index">Trang chủ</a></li>
            <li class="breadcrumb-item active">Mail</li>
        </ul>
    </div>
</div>
<style type="text/css">
    .col-lg-6 {
        margin: 0 auto;
        width: 600px;
        height: 500px;
    }

    .block {
        margin: 0 auto;
    }

    .block-body {
        width: 500px;
        margin: 0 auto;
        height: 400px
    }

    .title {
        text-align: center;
    }
</style>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@if (ViewBag.Error == null)
{

    <script>
       
        Swal.fire(
            'Đã gửi!',           
            
        )
    </script>
}


<div class="col-lg-6">
    <div class="block">
        <div class="title" style="text-align:center"><strong class="d-block">Welcom Mail</strong><span class="d-block"></span></div>
        <div class="block-body">
            <form method="post" action="guimail">
                <div class="form-group">
                    <label class="form-control-label">Người nhận:</label>
                    <input class="form-control" type="text" name="nhan" />
                </div>
                <div class="form-group">
                    <label class="form-control-label">Chủ đề</label>
                    <input class="form-control" type="text" name="chude" />
                </div>
                <div class="form-group">
                    <label class="form-control-label">Nội dung</label>
                    <input class="form-control" type="text" name="noidung" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Gửi" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>

