@model IEnumerable<NLCS3.Models.CHITIETHOATDONG>

@{
    ViewBag.Title = "list_cthd";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container-fluid">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/Home/Index">Trang chủ</a></li>
                <li class="breadcrumb-item ">Quản lý</li>
                <li class="breadcrumb-item active">Chi tiết hoạt động</li>
                <li style="text-align: right">
                </li>
            </ul>
            
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="block" style="background-color:lightgray; color:black" >

        <h2 style="text-align:center">DANH  SÁCH VIÊN CHỨC THAM GIA HOẠT ĐỘNG</h2>
        <p class="btn btn-primary" style="background-color:antiquewhite;text-align:right">
            @Html.ActionLink("Thêm", "create_cthd")
        </p>
        <table class="table"  style="background-color:lightgray; color:black">
            <tr>
                <th>
                    Viên chức
                </th>
                <th>
                    Hoạt động
                </th>
                <th>
                    Ghi chú
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VIENCHUC.VC_HOTEN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HOATDONG.HD_TEN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GHICHU)
                    </td>
                    <td>
                        <p class="btn btn-primary" style="background-color:lightgreen">
                            @Html.ActionLink("Sửa", "edit_cthd", new { id = item.HD_MA })
                        </p>

                        <p class="btn btn-primary" style="background-color: lightsalmon">
                            @Html.ActionLink("Xóa", "delete_cthd", new { id = item.HD_MA })
                        </p>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>