@model NLCS3.Models.BOMON

@{
    ViewBag.Title = "create_bomon";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="block">
        <div class="panel-heading" style="font-weight:bold; color:coral;font-size:20px; text-align:center">
            Nhập thông bộ môn mới
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2" style="font-weight:bold">
                        Mã bộ môn:
                    </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BM_MA, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BM_MA, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-weight:bold">
                        Khoa:
                    </label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.K_MA, ViewBag.CateList as SelectList, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-weight:bold">
                        Tên bộ môn:
                    </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BM_TEN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BM_TEN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" style="background-color:burlywood" /> |
                    @Html.ActionLink("Về danh sách", "list_bomon")
                </div>
            </div>
        }

</div>
</div>