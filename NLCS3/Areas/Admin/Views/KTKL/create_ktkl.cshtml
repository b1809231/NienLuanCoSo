@model NLCS3.Models.KHENTHUONGKYLUAT

@{
    ViewBag.Title = "create_ktkl";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <div class="block">
        <div class="panel-heading" style="font-weight:bold; color:coral;font-size:20px; text-align:center">
            Nhập thông KTKL mới
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>KHENTHUONGKYLUAT</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2" style="font-weight:bold">
                        Mã :
                    </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KT_MA, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KT_MA, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-weight:bold">
                        Viên chức nhận:
                    </label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.VC_MA, ViewBag.CateList as SelectList, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-weight:bold">
                        Nội dung:
                    </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KT_NOIDUNG, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KT_NOIDUNG, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-weight:bold">
                        Thưởng:
                    </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KT_THUONG, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KT_THUONG, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" style="background-color:burlywood" /> |
                    @Html.ActionLink("Về danh sách", "list_ktkl")
                </div>
            </div>
        }
</div>
</div>