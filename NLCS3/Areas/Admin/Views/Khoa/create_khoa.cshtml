@model NLCS3.Models.KHOA

@{
    ViewBag.Title = "create_khoa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="panel-heading" style="font-weight:bold; color:coral;font-size:20px; text-align:center">
    Nhập thông khoa mới
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" style="font-weight:bold">
                Mã khoa:
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.K_MA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.K_MA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="font-weight:bold">
                Tên khoa:
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.K_TEN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.K_TEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" style="background-color:burlywood" /> |
            @Html.ActionLink("Về danh sách", "list_khoa")
        </div>
    </div>
}

