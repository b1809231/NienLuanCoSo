@model NLCS3.Models.KHOA

@{
    ViewBag.Title = "edit_khoa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="block">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>KHOA</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2" style="font-weight:bold">
                        Mã khoa:
                    </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.K_MA, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.K_MA, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-weight:bold">
                        Tên khoa:
                    </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.K_TEN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.K_TEN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <<div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" style="background-color:antiquewhite;" /> |
                        @Html.ActionLink("Về danh sách", "list_bomon")

                    </div>
                </div>
            </div>
        }

        </div>
</div>